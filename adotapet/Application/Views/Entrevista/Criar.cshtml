@model Service.Models.EntrevistaViewModel

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar</h1>

<h4>Entrevista</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdPet" class="control-label"></label>
                <select asp-for="IdPet" class="form-control" asp-items="ViewBag.IdPet"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdAdotante" class="control-label"></label>
                <select asp-for="IdAdotante" class="form-control" asp-items="ViewBag.IdAdotante"></select>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    <script>
        $(function () {
            $("#Data").mask("00/00/0000", { placeholder: "__ /__ / _____" });
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
